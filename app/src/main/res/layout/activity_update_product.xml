<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_login"
                    android:padding="10dp"
                    android:text="cập nhập sản phẩm "
                    android:textColor="@color/black"
                    android:textSize="21dp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:id="@+id/content_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <EditText
                        android:id="@+id/edt_name_pd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9dp"
                        android:hint="ten san pham" />

                    <EditText
                        android:inputType="number"
                        android:id="@+id/edt_price_pd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9dp"
                        android:hint="gia san pham" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="danh mục sản phẩm"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <Spinner
                                android:id="@+id/spinner_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView

                                android:text="khu vực bán"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <Spinner
                                android:id="@+id/spinner_khuvuc"
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center" />
                        </LinearLayout>
                    </LinearLayout>





                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/btn_choose_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/white"
                            android:src="@drawable/ic_baseline_add_photo_alternate_40" />

                        <TextView
                            android:id="@+id/txt_choose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/btn_choose_img"
                            android:layout_centerHorizontal="true"
                            android:text="chọn hình " />

                        <ImageView

                            android:id="@+id/image_pd"
                            android:layout_width="280dp"
                            android:layout_height="280dp"
                            android:layout_below="@+id/txt_choose"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:background="@drawable/empty_image"
                            android:scaleType="centerCrop" />

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/edt_description_pd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9dp"
                        android:hint="mo ta san pham" />




                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:padding="15dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:inputType="textCapSentences|textMultiLine"
                    android:maxLines ="4"
                    android:maxLength ="2000"
                    android:background="@drawable/border_bottom"
                    android:id="@+id/btn_add_pd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="cậpn nhập sản phẩm" />

                <Button
                    android:layout_marginLeft="69dp"
                    android:background="@drawable/border_bottom"
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Cancel" />
            </LinearLayout>
        </LinearLayout>


    </ScrollView>
    <ProgressBar
        android:visibility="visible"
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

</RelativeLayout>

